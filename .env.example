# Database Configuration using Generic Variables
# Works for both PostgreSQL and MySQL
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=mydb
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# PostgreSQL-Specific Variables (alternative)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=mydb
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_SSL=false

# MySQL-Specific Variables (alternative)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=mydb
# MYSQL_USER=root
# MYSQL_PASSWORD=password
# MYSQL_SSL=false
